<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/grim_items_imgeview_width"
            android:layout_height="@dimen/grim_items_imgeview_height"
            android:id="@+id/iv_leo"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@+id/iv_leo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/lblGame"
            android:textColor="@android:color/white"
            android:textSize="?android:attr/textAppearanceSmall"
            android:paddingLeft="@dimen/common_edge_padding_5"/>

        <TextView
            android:layout_toRightOf="@+id/iv_leo"
            android:layout_below="@+id/lblGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/lblUser"
            android:textColor="@android:color/white"
            android:textSize="?android:attr/textAppearanceSmall"
            android:paddingLeft="@dimen/common_edge_padding_5"/>

        <TextView
            android:layout_toRightOf="@+id/iv_leo"
            android:layout_below="@+id/lblUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/lblViewers"
            android:textColor="@android:color/white"
            android:textSize="?android:attr/textAppearanceSmall"
            android:paddingLeft="@dimen/common_edge_padding_5"/>

    </RelativeLayout>

    <RelativeLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblTitle"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:textSize="?android:attr/textAppearanceSmall"
            android:paddingLeft="@dimen/common_edge_padding_5"/>

    </RelativeLayout>

</FrameLayout>